<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:orientation="vertical">

    <!--<ScrollView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/bg_login_top"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_centerInParent="true"
                app:layout_heightPercent="7%sh"
                android:src="@drawable/dl_logo"/>
            <!--<TextView-->
                <!--android:id="@+id/textView_title"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerInParent="true"-->
                <!--android:text="@string/login_tip"-->
                <!--android:textColor="@color/white"-->
                <!--android:textSize="38sp" />-->

        </com.zhy.android.percent.support.PercentRelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="6"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1">
                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_login_"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:paddingBottom="0dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:text="@string/login"
                        android:textSize="22sp"
                        app:layout_textSizePercent="6%w"/>
                    <Switch
                        android:id="@+id/switch_change_language"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="CN"
                        android:textOff="CN"
                        android:textOn="EN"
                        android:textSize="14sp"
                        app:layout_textSizePercent="4%w"/>
                    <!--android:thumb="@drawable/switch_custom_thumb_selector"-->
                    <!--android:track="@drawable/switch_custom_track_selector"-->
                </com.zhy.android.percent.support.PercentLinearLayout>
            </LinearLayout>
            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/device_name"
                    android:textColor="#6a6a6a"
                    android:textSize="14sp"
                    app:layout_textSizePercent="4%w"
                    />

                <TextView
                    android:id="@+id/tv_login_terminalname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="0dp"
                    android:paddingRight="10dp"
                    android:text="device"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    app:layout_textSizePercent="5%w"/>
            </com.zhy.android.percent.support.PercentLinearLayout>
            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/user_name"
                    android:textColor="#6a6a6a"
                    android:textSize="14sp"
                    app:layout_textSizePercent="4%w"
                    />

                <EditText
                    android:id="@+id/et_login_username"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_login_edit"
                    android:hint="@string/username_tip"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:text=""
                    android:textColorHint="#808080"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    app:layout_textSizePercent="5%w"
                    android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ@._-"
                    />
            </com.zhy.android.percent.support.PercentLinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginBottom="10dp"
                android:background="#e2e2e2" />
            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/password"
                    android:textColor="#6a6a6a"
                    android:textSize="14sp"
                    app:layout_textSizePercent="4%w"/>

                <EditText
                    android:id="@+id/et_login_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_login_edit"
                    android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ@._-"
                    android:hint="@string/password_tip"
                    android:maxLength="30"
                    android:password="true"
                    android:singleLine="true"
                    android:text=""
                    android:textColorHint="#808080"
                    android:textSize="16sp"
                    app:layout_textSizePercent="5%w"/>
            </com.zhy.android.percent.support.PercentLinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginBottom="10dp"
                android:background="#e2e2e2" />
            <LinearLayout
                android:id="@+id/lly_login_forgot_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@string/forgot_password"
                    android:textColor="@color/main_color"
                    android:textSize="14sp" />
            </LinearLayout>
            <Button
                android:id="@+id/bt_login"
                android:layout_width="match_parent"
                android:layout_height="48dip"
                android:background="@drawable/button_add_zhuce"
                android:layout_marginTop="16dp"
                android:text="@string/login"
                android:textColor="@color/white"
                android:textSize="14dip" />
            <ImageButton
                android:layout_width="47dp"
                android:layout_height="45dp"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_circle_login"
                android:src="@drawable/ic_login_left"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>

    <!--</ScrollView>-->

</com.zhy.android.percent.support.PercentLinearLayout>