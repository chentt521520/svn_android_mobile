<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_fillet_bg">

                <TextView
                    android:id="@+id/my_dialog_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="@string/tip"
                    android:textColor="@color/main_color"
                    android:textSize="18sp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#999999"/>

            <LinearLayout
                android:id="@+id/binding_phone_dialog_lin1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_update_bg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/clear_data_dialog_tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:layout_margin="15dp"
                    android:textColor="@color/tv2"
                    android:text="@string/is_clear_sure"/>

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="15dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/clear_data_dialog_tv_no"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:background="@drawable/order_generate_prompt_dialog_tv_no"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:text="@string/fou"
                        app:layout_heightPercent="12%w"
                        app:layout_widthPercent="30%w"/>

                    <Button
                        android:id="@+id/clear_data_dialog_tv_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/shape_bg006"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:text="@string/shi"
                        app:layout_heightPercent="12%w"
                        app:layout_widthPercent="30%w"/>

                </com.zhy.android.percent.support.PercentLinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>