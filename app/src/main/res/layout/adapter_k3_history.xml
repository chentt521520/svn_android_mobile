<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/adapter_ssq_jqkj_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/adapter_ssq_jqkj_tv_qihao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="6dp"
            android:gravity="center"
            android:textColor="#7f6c5d"
            android:textSize="14sp"
            android:layout_weight="2.5"
            app:layout_textSizePercent="3.5%sw"/>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#E9E6DF"/>

        <TextView
            android:id="@+id/adapter_ssq_jqkj_tv_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center"
            android:padding="6dp"
            android:text=""
            android:textColor="@color/main_color"
            android:textSize="14sp"
            app:layout_textSizePercent="4%sw"/>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#E9E6DF"/>

        <TextView
            android:id="@+id/adapter_ssq_jqkj_tv_daxiao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:padding="6dp"
            android:textColor="#7f6c5d"
            android:textSize="14sp"
            android:visibility="gone"
            android:layout_weight="2"
            app:layout_textSizePercent="4%sw"/>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#E9E6DF"/>

        <TextView
            android:id="@+id/adapter_ssq_jqkj_tv_jiou"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="6dp"
            android:gravity="center"
            android:textColor="#7f6c5d"
            android:textSize="14sp"
            android:layout_weight="2"
            app:layout_textSizePercent="4%sw"/>
    </com.zhy.android.percent.support.PercentLinearLayout>

</com.zhy.android.percent.support.PercentLinearLayout>