<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_tab_wei"
    android:orientation="vertical">

    <!--<ScrollView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/login_bg"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_centerInParent="true"
                android:src="@drawable/dl_logo"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="6"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_centerInParent="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="25dip"
                    android:paddingRight="25dip"
                    android:paddingTop="15dip"
                    android:paddingBottom="10dip"
                    android:background="@drawable/lly_lottery_purchase_bg">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.zhy.android.percent.support.PercentLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <TextView
                                    android:id="@+id/tv_login_"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="0dp"
                                    android:paddingRight="5dp"
                                    android:paddingTop="5dp"
                                    android:text="@string/device_name"
                                    android:textSize="14dip"
                                    android:textColor="@color/login_grad"
                                    app:layout_textSizePercent="6%w"/>
                                <TextView
                                    android:id="@+id/tv_login_terminalname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="0dp"
                                    android:paddingRight="10dp"
                                    android:text="device"
                                    android:textColor="#000"
                                    android:textSize="14dip"
                                    android:gravity="center_vertical"
                                    app:layout_textSizePercent="5%w"/>
                            </LinearLayout>

                            <Switch
                                android:id="@+id/switch_change_language"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="CN"
                                android:textOff="CN"
                                android:textOn="EN"
                                android:textSize="14sp"
                                android:textColor="@color/main_login_color"
                                app:layout_textSizePercent="4%w"/>
                            <!--android:thumb="@drawable/switch_custom_thumb_selector"-->
                            <!--android:track="@drawable/switch_custom_track_selector"-->
                        </com.zhy.android.percent.support.PercentLinearLayout>
                    </LinearLayout>
                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_marginTop="30dip">
                        <EditText
                            android:id="@+id/et_login_username"
                            android:layout_width="match_parent"
                            android:layout_height="35dip"
                            android:background="@drawable/shape_login_edit"
                            android:hint="@string/user_name"
                            android:maxLength="20"
                            android:singleLine="true"
                            android:text=""
                            android:textColorHint="#808080"
                            android:textSize="14dip"
                            android:gravity="center_vertical"
                            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ@._-"
                            />
                    </com.zhy.android.percent.support.PercentLinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:layout_marginBottom="10dp"
                        android:background="#e2e2e2" />
                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical">
                        <EditText
                            android:id="@+id/et_login_password"
                            android:layout_width="match_parent"
                            android:layout_height="35dip"
                            android:background="@drawable/shape_login_edit"
                            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ@._-"
                            android:hint="@string/password"
                            android:maxLength="30"
                            android:password="true"
                            android:singleLine="true"
                            android:text=""
                            android:textColorHint="#808080"
                            android:textSize="14dip"
                            app:layout_textSizePercent="5%w"/>
                    </com.zhy.android.percent.support.PercentLinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:layout_marginBottom="10dp"
                        android:background="#e2e2e2" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lly_login_forgot_password"
                    android:layout_width="match_parent"
                    android:layout_height="30dip"
                    android:visibility="gone"
                    android:gravity="right|center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:text="@string/forgot_password"
                        android:textColor="@color/main_login_color"
                        android:textSize="12dip" />
                </LinearLayout>
                <Button
                    android:id="@+id/bt_login"
                    android:layout_width="match_parent"
                    android:layout_height="38dip"
                    android:background="@drawable/button_add_zhuce"
                    android:layout_marginTop="70dp"
                    android:text="@string/login"
                    android:textColor="@color/white"
                    android:textSize="14dip" />
                <ImageButton
                    android:layout_width="47dp"
                    android:layout_height="45dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/shape_circle_login"
                    android:src="@drawable/ic_login_left"
                    android:visibility="gone"/>
            </LinearLayout>

        </RelativeLayout>



    </LinearLayout>

    <!--</ScrollView>-->

</com.zhy.android.percent.support.PercentLinearLayout>