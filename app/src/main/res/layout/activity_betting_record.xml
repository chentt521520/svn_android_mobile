<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/header_type_one_panel"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/main_color">
        <LinearLayout
            android:id="@+id/lly_manual_scanner_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:padding="5dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/header_type_one_back_arrow"
                android:layout_width="wrap_content"
                android:layout_height="23dip"
                android:paddingLeft="10dip"
                android:adjustViewBounds="true"
                android:src="@drawable/arrow_left_white"/>
        </LinearLayout>
        <TextView
            android:id="@+id/header_type_one_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/kaijianglishi"
            android:textColor="@color/white"
            android:textSize="18sp"/>
    </RelativeLayout>
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/white"
        android:layout_marginTop="0.5dip">
        <com.jc.lottery.util.ImagePagerIndicator
            android:layout_height="46dp"
            android:layout_width="0dp"
            app:layout_widthPercent="60%sw"
            app:tab_visiable_count="3"
            app:tab_unselect_color="@color/black"
            app:tab_select_color="@color/main_color"
            app:tab_indicator="@color/main_color"
            android:id="@+id/image_indicator">
        </com.jc.lottery.util.ImagePagerIndicator>
    </com.zhy.android.percent.support.PercentLinearLayout>
    <android.support.v4.view.ViewPager
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/view_pager"
        android:layout_marginTop="0.5dip">
    </android.support.v4.view.ViewPager>
</LinearLayout>
