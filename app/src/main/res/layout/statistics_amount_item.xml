<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/lly_statistics_amount_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_widthPercent="45%sw"
        app:layout_heightPercent="25%sw"
        android:orientation="vertical"
        android:background="@drawable/statistics_item_bg_one"
        app:layout_marginLeftPercent="1%sw"
        android:gravity="center_vertical"
        android:visibility="visible"
        app:layout_marginBottomPercent="2%sw">

        <ImageView
            android:id="@+id/img_statistics_item"
            android:layout_width="36dip"
            android:layout_height="36dip"
            android:adjustViewBounds="true"
            android:layout_marginRight="10dip"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />
        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/lly_statistics_amount_item_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip">
            <TextView
                android:id="@+id/tv_statistics_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textSize="24dip"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/tv_statistics_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="K3"
                android:textSize="14dip"
                android:textColor="@color/white"
                />
        </com.zhy.android.percent.support.PercentLinearLayout>

    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentLinearLayout>
