<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/manual_scanner_bgs">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/header_type_one_panel"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <LinearLayout
                android:id="@+id/lly_manual_scanner_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:padding="5dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/header_type_one_back_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="23dip"
                    android:paddingLeft="10dip"
                    android:adjustViewBounds="true"
                    android:src="@drawable/arrow_left_white"/>

            </LinearLayout>

            <TextView
                android:id="@+id/header_type_one_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/bonus_details"
                android:textColor="#ffffff"
                android:textSize="18sp"/>
        </RelativeLayout>
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/scanner_details_bg"
            app:layout_marginLeftPercent="3%sw"
            app:layout_marginRightPercent="3%sw">
            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_marginTopPercent="3%sh"
                app:layout_marginBottomPercent="1%sh"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_heightPercent="2%sh"
                    android:adjustViewBounds="true"
                    android:src="@drawable/bt02"/>
                <TextView
                    android:id="@+id/tv_scanner_details_game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16dip"
                    app:layout_textSizePercent="4.5%sw"
                    android:textColor="#3B8CFE"
                    android:letterSpacing="0.1"
                    app:layout_marginLeftPercent="3%sw"
                    app:layout_marginRightPercent="3%sw"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_heightPercent="2%sh"
                    android:adjustViewBounds="true"
                    android:src="@drawable/bt01"/>
            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_heightPercent="4.5%sh"
                android:gravity="center_vertical"
                android:visibility="visible">
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/caipiaoqihaos"
                    android:textSize="16dip"
                    app:layout_textSizePercent="4%sw"
                    android:textColor="@color/black"
                    android:letterSpacing="0.1"
                    app:layout_marginLeftPercent="8%sw"
                    app:layout_marginRightPercent="3%sw"/>
                <TextView
                    android:id="@+id/tv_scanner_details_issue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16dip"
                    app:layout_textSizePercent="4%sw"
                    android:textColor="@color/black"
                    android:letterSpacing="0.1"
                    app:layout_marginLeftPercent="3%sw"
                    app:layout_marginRightPercent="8%sw"/>
            </com.zhy.android.percent.support.PercentLinearLayout>
            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_heightPercent="4.5%sh"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/open_draw"
                    android:textSize="16dip"
                    app:layout_textSizePercent="4%sw"
                    android:textColor="@color/black"
                    android:letterSpacing="0.1"
                    app:layout_marginLeftPercent="8%sw"
                    app:layout_marginRightPercent="3%sw"/>
                <TextView
                    android:id="@+id/tv_scanner_details_open_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16dip"
                    app:layout_textSizePercent="4%sw"
                    android:textColor="@color/black"
                    android:letterSpacing="0.1"
                    app:layout_marginLeftPercent="3%sw"
                    app:layout_marginRightPercent="8%sw"/>
            </com.zhy.android.percent.support.PercentLinearLayout>
            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_heightPercent="4.5%sh"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/buytimes"
                    android:textSize="16dip"
                    app:layout_textSizePercent="4%sw"
                    android:textColor="@color/black"
                    android:letterSpacing="0.1"
                    app:layout_marginLeftPercent="8%sw"
                    app:layout_marginRightPercent="3%sw"/>
                <TextView
                    android:id="@+id/tv_scanner_details_recipient_buy_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16dip"
                    app:layout_textSizePercent="4%sw"
                    android:textColor="@color/black"
                    android:letterSpacing="0.1"
                    app:layout_marginLeftPercent="3%sw"
                    app:layout_marginRightPercent="8%sw"/>
            </com.zhy.android.percent.support.PercentLinearLayout>
            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/lly_scanner_details_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_heightPercent="4.5%sh"
                android:gravity="center_vertical"
                android:visibility="gone">
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/terminal"
                    android:textSize="16dip"
                    app:layout_textSizePercent="4%sw"
                    android:textColor="@color/black"
                    android:letterSpacing="0.1"
                    app:layout_marginLeftPercent="8%sw"
                    app:layout_marginRightPercent="3%sw"/>
                <TextView
                    android:id="@+id/tv_scanner_details_terminal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16dip"
                    app:layout_textSizePercent="4%sw"
                    android:textColor="@color/black"
                    android:letterSpacing="0.1"
                    app:layout_marginLeftPercent="3%sw"
                    app:layout_marginRightPercent="8%sw"/>
            </com.zhy.android.percent.support.PercentLinearLayout>
            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_heightPercent="4.5%sh"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/multidraw"
                    android:textSize="16dip"
                    app:layout_textSizePercent="4%sw"
                    android:textColor="@color/black"
                    android:letterSpacing="0.1"
                    app:layout_marginLeftPercent="8%sw"
                    app:layout_marginRightPercent="3%sw"/>
                <TextView
                    android:id="@+id/tv_scanner_details_multidraw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16dip"
                    app:layout_textSizePercent="4%sw"
                    android:textColor="@color/black"
                    android:letterSpacing="0.1"
                    app:layout_marginLeftPercent="3%sw"
                    app:layout_marginRightPercent="8%sw"/>
            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    app:layout_heightPercent="4.5%sh"
                    android:layout_weight="1"
                    android:text="@string/touzhuhaomas"
                    android:textSize="16dip"
                    app:layout_textSizePercent="4%sw"
                    android:textColor="@color/black"
                    android:letterSpacing="0.1"
                    app:layout_marginLeftPercent="8%sw"
                    app:layout_marginRightPercent="3%sw"
                    android:gravity="center_vertical"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rel_scanner_details_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_marginLeftPercent="3%sw"
                    app:layout_marginRightPercent="8%sw" />
            </com.zhy.android.percent.support.PercentLinearLayout>
            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_heightPercent="4.5%sh"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/hejis"
                    android:textSize="16dip"
                    app:layout_textSizePercent="4%sw"
                    android:textColor="@color/black"
                    android:letterSpacing="0.1"
                    app:layout_marginLeftPercent="8%sw"
                    app:layout_marginRightPercent="3%sw"/>
                <TextView
                    android:id="@+id/tv_scanner_details_hejis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16dip"
                    app:layout_textSizePercent="4%sw"
                    android:textColor="@color/main_color"
                    android:letterSpacing="0.1"
                    app:layout_marginLeftPercent="3%sw"
                    app:layout_marginRightPercent="8%sw"/>
            </com.zhy.android.percent.support.PercentLinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                app:layout_marginLeftPercent="7%sw"
                app:layout_marginRightPercent="7%sw"
                android:background="@color/jc_header_text_white"/>
            <TextView
                android:id="@+id/tv_scanner_details_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_heightPercent="4.5%sh"
                android:text=""
                app:layout_textSizePercent="4.2%sw"
                android:textColor="@color/black"
                android:letterSpacing="0.1"
                app:layout_marginLeftPercent="8%sw"
                app:layout_marginRightPercent="8%sw"
                android:gravity="center"/>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_marginTopPercent="1%sh"
                app:layout_marginBottomPercent="1%sh"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_heightPercent="2%sh"
                    android:adjustViewBounds="true"
                    android:src="@drawable/bt02"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/winning_information"
                    android:textSize="16dip"
                    app:layout_textSizePercent="4.5%sw"
                    android:textColor="#3B8CFE"
                    android:letterSpacing="0.1"
                    app:layout_marginLeftPercent="3%sw"
                    app:layout_marginRightPercent="3%sw"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_heightPercent="2%sh"
                    android:adjustViewBounds="true"
                    android:src="@drawable/bt01"/>
            </com.zhy.android.percent.support.PercentLinearLayout>

            <LinearLayout
                android:id="@+id/lly_lotto_win"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/receiving_detail_lly_bg"
                android:layout_margin="10dip"
                app:layout_marginBottomPercent="12%sh"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dip"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:background="#f3f3f3">
                    <TextView
                        android:id="@+id/tv_lotto_no"
                        android:layout_width="40dip"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/xuhao"
                        android:textSize="12dip"
                        android:textColor="#333333"
                        />
                    <TextView
                        android:id="@+id/tv_lotto_three"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/jiangqis"
                        android:textSize="12dip"
                        android:textColor="#333333" />
                    <TextView
                        android:id="@+id/tv_lotto_one"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/zhongjiangzhushu"
                        android:textSize="12dip"
                        android:textColor="#333333" />
                    <TextView
                        android:id="@+id/tv_lotto_two"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/zhongjiangjine"
                        android:textSize="12dip"
                        android:textColor="#333333" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rel_lotto_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </android.support.v7.widget.RecyclerView>
                </RelativeLayout>
            </LinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/lly_scanner_details_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_heightPercent="22.5%sh"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_scanner_details_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16dip"
                    app:layout_textSizePercent="6%sw"
                    android:textColor="@color/delivery_record_tx_color"
                    android:letterSpacing="0.1" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zhongjiangjine"
                    android:textSize="16dip"
                    app:layout_textSizePercent="4%sw"
                    android:textColor="#666666"
                    android:letterSpacing="0.1"
                    android:layout_marginTop="5dip"/>
            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/lly_scanner_details_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_heightPercent="4.5%sh"
                android:gravity="center_vertical"
                android:visibility="gone">
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/zhongjiangjine"
                    android:textSize="16dip"
                    app:layout_textSizePercent="4%sw"
                    android:textColor="@color/black"
                    android:letterSpacing="0.1"
                    app:layout_marginLeftPercent="8%sw"
                    app:layout_marginRightPercent="3%sw"/>
                <TextView
                    android:id="@+id/tv_scanner_details_active_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16dip"
                    app:layout_textSizePercent="4%sw"
                    android:textColor="@color/black"
                    android:letterSpacing="0.1"
                    app:layout_marginLeftPercent="3%sw"
                    app:layout_marginRightPercent="8%sw"/>
            </com.zhy.android.percent.support.PercentLinearLayout>
            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/lly_scanner_details_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_heightPercent="4.5%sh"
                android:gravity="center_vertical"
                android:visibility="gone">
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/winstates"
                    android:textSize="16dip"
                    app:layout_textSizePercent="4%sw"
                    android:textColor="@color/black"
                    android:letterSpacing="0.1"
                    app:layout_marginLeftPercent="8%sw"
                    app:layout_marginRightPercent="3%sw"/>
                <TextView
                    android:id="@+id/tv_scanner_details_win_states"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16dip"
                    app:layout_textSizePercent="4%sw"
                    android:textColor="@color/black"
                    android:letterSpacing="0.1"
                    app:layout_marginLeftPercent="3%sw"
                    app:layout_marginRightPercent="8%sw"/>
            </com.zhy.android.percent.support.PercentLinearLayout>
        </com.zhy.android.percent.support.PercentLinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/please_consult"
            android:textColor="@color/material_yellow"
            app:layout_textSizePercent="4%sw"
            app:layout_marginTopPercent="2%sh"
            app:layout_marginBottomPercent="2%sh"
            android:gravity="center"/>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <Button
        android:id="@+id/btn_scanner_details_submit"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        app:layout_heightPercent="6%sh"
        android:text="@string/confirm_the_award"
        android:textColor="@color/white"
        app:layout_textSizePercent="2%sh"
        app:layout_marginLeftPercent="8%sw"
        app:layout_marginRightPercent="8%sw"
        app:layout_marginBottomPercent="11%sh"
        android:background="@drawable/scanner_shape_bg"
        android:layout_alignParentBottom="true"/>
</com.zhy.android.percent.support.PercentRelativeLayout>
