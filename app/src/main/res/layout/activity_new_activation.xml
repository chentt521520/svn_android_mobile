<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_bg">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="140dip"
        android:adjustViewBounds="true"
        android:layout_marginLeft="-1dip"
        android:layout_marginRight="-1dip"
        android:background="@color/main_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/lly_activation_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dip">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="23dip"
                    android:paddingLeft="10dip"
                    android:adjustViewBounds="true"
                    android:src="@drawable/arrow_left_white" />

            </LinearLayout>
            <TextView
                android:id="@+id/tv_lottery_purchase_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="@string/activation"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lly_activation_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lly_lottery_purchase_bg"
            android:orientation="vertical"
            android:layout_marginTop="20dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:elevation="2dp">

            <LinearLayout
                android:id="@+id/lly_lottery_purchase_type"
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="@string/choose_game"
                    android:textSize="14dip"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dip"/>
                <Spinner
                    android:id="@+id/sp_activation_game"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14dip"
                    android:textColor="#333333"
                    android:visibility="visible"
                    android:background="@color/white"
                    android:layout_marginRight="10dip"
                    android:dropDownWidth="match_parent"
                    android:dropDownVerticalOffset="33dp"
                    android:layout_marginLeft="10dip"/>
                <ImageView
                    android:layout_width="7dip"
                    android:layout_height="12dip"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/arrow_right_small"
                    android:layout_marginRight="20dip"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="#E6E6E6"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginBottom="23dip"
                android:visibility="visible"/>

            <Button
                android:id="@+id/btn_activation_query"
                android:layout_width="match_parent"
                android:layout_height="32dip"
                android:background="@drawable/button_add_zhuce"
                android:text="@string/query"
                android:textColor="@color/white"
                android:textSize="14dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginBottom="20dip"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/lly_lottery_purchase_bg"
            android:layout_margin="15dip"
            android:elevation="2dp">
            <LinearLayout
                android:id="@+id/lly_activation_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:layout_below="@+id/tv_activation_scan"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="5dip">
                <View
                    android:layout_width="2dip"
                    android:layout_height="10dip"
                    android:background="#008FFC"
                    android:layout_marginLeft="20dip"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/query_results"
                    android:textSize="14dip"
                    android:textColor="@color/main_text"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="10dip"
                    android:letterSpacing="0.1"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="#E6E6E6"
                android:visibility="visible"/>
            <LinearLayout
                android:id="@+id/lly_activation_select_top"
                android:layout_width="match_parent"
                android:layout_height="20dip"
                android:orientation="horizontal"
                android:gravity="center_vertical|right"
                android:visibility="gone"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/have_chosen"
                    android:textSize="12dip"
                    android:textColor="#333333" />
                <TextView
                    android:id="@+id/tv_activation_num"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=""
                    android:textSize="12dip"
                    android:textColor="@color/main_color"
                    android:layout_marginLeft="10dip"/>
            </LinearLayout>
            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/lly_receiving_nodata"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="visible"
                android:layout_marginTop="20dip">
                <ImageView
                    android:id="@+id/img_reward_nodata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_widthPercent="75%sw"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center"
                    android:src="@drawable/no_record"
                    android:layout_marginBottom="40dip"/>
            </com.zhy.android.percent.support.PercentLinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rel_activation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="48dip">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/lly_activation_bottom"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/white"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/lly_activation_all"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/img_activation_all"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:adjustViewBounds="true"
                android:layout_marginLeft="15dip"
                android:visibility="visible"/>
            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:text="@string/all_election"
                android:textColor="@color/black"
                android:textSize="14dip"
                android:gravity="center_vertical"
                />
        </LinearLayout>
        <Button
            android:id="@+id/btn_activation_submit"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:text="@string/activation"
            android:textColor="@color/white"
            android:textSize="14dip"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/recharge_btn_bg"
            android:layout_marginRight="5dip"
            android:paddingLeft="25dip"
            android:paddingRight="25dip"/>
    </com.zhy.android.percent.support.PercentLinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#F3F3F3"
        android:layout_above="@id/lly_activation_bottom"
        android:visibility="gone"/>
</RelativeLayout>
