<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/lly_statistics_amount_item"
        android:layout_width="match_parent"
        android:layout_height="35dip"
        android:orientation="horizontal"
        android:weightSum="3"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/img_delivery_input_item_select"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="15dip"
            android:adjustViewBounds="true"
            android:src="@drawable/settle_no"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/tv_delivery_input_item_no"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textSize="12dip"
            android:textColor="#333333"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/tv_delivery_input_item_batch"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textSize="12dip"
            android:textColor="#333333" />
        <TextView
            android:id="@+id/tv_delivery_input_item_two"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textSize="12dip"
            android:textColor="#333333" />
        <ImageView
            android:id="@+id/img_delivery_input_item_del"
            android:layout_width="15dip"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginRight="5dip"
            android:layout_centerVertical="true"
            android:src="@drawable/delivery_agent_del"
            android:layout_toLeftOf="@id/lly_delivery_item_two"
            android:visibility="gone"/>
    </LinearLayout>

</com.zhy.android.percent.support.PercentRelativeLayout>
