                            android:textSize="14dip"
                            android:textColor="@color/white"
                            android:layout_marginTop="5dip"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
