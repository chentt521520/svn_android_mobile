<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_update_password_back"
        android:layout_width="24dip"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/guanbi"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="25dip"/>

    <TextView
        android:id="@+id/tv_password_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dip"
        android:layout_marginTop="80dip"
        android:text="@string/update_password"
        android:textColor="@color/black"
        android:textSize="26dip"/>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/old_password"
            android:textSize="16dip"
            android:textColor="#4D4D4D"
            android:layout_marginTop="50dip" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dip">
            <EditText
                android:id="@+id/et_password_old"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/please_enter_the_old_password"
                android:textSize="16dip"
                android:textColor="@color/black"
                android:inputType="textPassword"
                android:maxLength="30"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#F3F3F3"
            android:layout_marginTop="5dip"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_password"
            android:textSize="16dip"
            android:textColor="#4D4D4D"
            android:layout_marginTop="20dip"/>
        <EditText
            android:id="@+id/et_password_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/please_enter_the_new_password"
            android:textSize="16dip"
            android:textColor="@color/black"
            android:layout_marginTop="20dip"
            android:inputType="textPassword"
            android:maxLength="30"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#F3F3F3"
            android:layout_marginTop="5dip"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm_password"
            android:textSize="16dip"
            android:textColor="#4D4D4D"
            android:layout_marginTop="20dip"/>
        <EditText
            android:id="@+id/et_password_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/please_enter_the_new_password"
            android:textSize="16dip"
            android:textColor="@color/black"
            android:layout_marginTop="20dip"
            android:inputType="textPassword"
            android:maxLength="30"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#F3F3F3"
            android:layout_marginTop="5dip"/>
        
        <Button
            android:id="@+id/btn_password_submit"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:background="@drawable/button_add_zhuce"
            android:layout_marginTop="20dip"
            android:text="@string/update_password"
            android:textColor="@color/white"
            android:textSize="14dip" />
    </com.zhy.android.percent.support.PercentLinearLayout>

</com.zhy.android.percent.support.PercentLinearLayout>
