<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/font"
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="5dip">
        <RelativeLayout
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_marginLeft="15dip"
            android:gravity="center"
            android:visibility="gone">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:adjustViewBounds="true"
                android:src="@drawable/order_list_icon"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dip"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_reward_record_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/black"
                android:textSize="13dip" />
            <TextView
                android:id="@+id/tv_reward_record_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/tv2"
                android:textSize="13dip"
                android:layout_centerVertical="true"
                android:layout_below="@id/tv_reward_record_item_name"
                android:layout_alignLeft="@id/tv_reward_record_item_name"
                android:layout_marginTop="5dip"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dip"
            android:gravity="center_vertical|right"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_reward_record_item_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/main_color"
                android:textSize="13dip"
                android:gravity="bottom"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dip">
                <TextView
                    android:id="@+id/tv_reward_record_item_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#2B2B2B"
                    android:textSize="13dip"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/tv_reward_record_item_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#2B2B2B"
                    android:textSize="13dip"
                    android:gravity="top"
                    android:layout_marginLeft="12dip"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/back"
        android:layout_width="120dp"
        android:layout_height="70dp">
        <RelativeLayout
            android:id="@+id/delete_button"
            android:clickable="true"
            android:layout_width="120dip"
            android:layout_height="70dp"
            android:background="#ff0000"
            android:gravity="center">
            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ff0000"
                android:gravity="center"
                android:text="@string/closing_order"
                android:textSize="16dip"
                android:textColor="@color/white" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
