<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lly_activation_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:layout_marginTop="10dip">
    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/lly_activation_one_item_top"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/activation_item_top_bg">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/lly_activation_one_item_smooth"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_activation_one_item_select"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="15dip"
                    android:visibility="visible"
                    android:src="@drawable/activation_no"/>

                <TextView
                    android:id="@+id/tv_activation_one_item_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="12dip" />
            </com.zhy.android.percent.support.PercentLinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/activation_one_item_btn_bg"
                android:gravity="center"
                android:paddingBottom="2dip"
                android:paddingLeft="12dip"
                android:paddingRight="12dip"
                android:paddingTop="2dip"
                android:text=""
                android:textColor="#ff3300"
                android:textSize="13dip"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical">

                <Button
                    android:id="@+id/btn_activation_one_item_book"
                    android:layout_width="wrap_content"
                    android:layout_height="32dip"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/activation_item_btn_bg"
                    android:text="@string/see_details"
                    android:textColor="@color/white"
                    android:textSize="14dip"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"/>
            </LinearLayout>
        </com.zhy.android.percent.support.PercentLinearLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/lly_activation_one_item_bottom"
        android:layout_width="match_parent"
        android:layout_height="90dip"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/activation_item_bottom_bg">
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_activation_one_item_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14dip"
                android:textColor="#333"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/number"
                android:textSize="14dip"
                android:textColor="#999"
                android:layout_marginTop="5dip"/>
        </LinearLayout>
        <View
            android:layout_width="0.5dip"
            android:layout_height="match_parent"
            android:background="#E3E3E3"
            android:layout_marginTop="15dip"
            android:layout_marginBottom="15dip"/>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_activation_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14dip"
                android:textColor="#333"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ticket_order_time"
                android:textSize="14dip"
                android:textColor="#999"
                android:layout_marginTop="5dip"/>
        </LinearLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>
</LinearLayout>
