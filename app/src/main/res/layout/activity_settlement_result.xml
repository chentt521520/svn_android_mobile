<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/lly_payment_pop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f3f4f7"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/lly_payment_pop_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="30dp"
            android:paddingBottom="25dp"
            android:visibility="visible">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/lottery_success1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:layout_marginTop="15dip"
                android:layout_marginRight="30dip"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pay_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#121212"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/pay_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:textColor="#121212"
                    android:textSize="12sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="35dp"
            android:paddingTop="25dp"
            android:paddingEnd="35dp"
            android:paddingBottom="25dp">

            <Button
                android:id="@+id/btn_lottery_pop_to_home"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_corner_grey"
                android:text="@string/back_home"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_lottery_pop_to_detail"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginLeft="5dip"
                android:layout_weight="1"
                android:background="@drawable/button_add_zhuce"
                android:text="@string/see_order"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>