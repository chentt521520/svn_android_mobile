<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_widthPercent="45%sw"
    app:layout_heightPercent="25%sw"
    app:layout_marginLeftPercent="2%sw"
    android:gravity="center">
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/lly_my_lottery_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_widthPercent="45%sw"
            app:layout_heightPercent="25%sw"
            android:orientation="vertical"
            android:background="@drawable/gc"
            android:gravity="center_vertical"
            android:visibility="visible"
            app:layout_marginBottomPercent="2%sw">
            <TextView
                android:id="@+id/tv_my_lottery_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ticket_collection"
                android:textColor="@color/white"
                app:layout_textSizePercent="4%sw"
                android:layout_marginLeft="15dip"/>
        </com.zhy.android.percent.support.PercentLinearLayout>
        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/lly_my_lottery_item_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_widthPercent="45%sw"
            app:layout_heightPercent="25%sw"
            android:orientation="vertical"
            android:background="@drawable/lottery_item_bg_lock"
            android:gravity="center"
            android:visibility="gone"
            app:layout_marginBottomPercent="2%sw">
            <ImageView
                android:id="@+id/img_my_immediate_item_lock"
                android:layout_width="wrap_content"
                android:layout_height="28dip"
                android:src="@drawable/suo_yes" />
        </com.zhy.android.percent.support.PercentLinearLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentLinearLayout>
