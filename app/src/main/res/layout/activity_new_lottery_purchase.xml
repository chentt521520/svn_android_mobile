<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F3F3F3">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="190dip"
        android:src="@color/main_color"
        android:adjustViewBounds="true"
        android:layout_marginLeft="-1dip"
        android:layout_marginRight="-1dip"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/lly_lottery_purchase_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dip">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="23dip"
                    android:adjustViewBounds="true"
                    android:src="@drawable/arrow_left_white" />

            </LinearLayout>
            <TextView
                android:id="@+id/tv_lottery_purchase_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="@string/ticket_collection"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:singleLine="true"/>
            <LinearLayout
                android:id="@+id/lly_immediate_cash_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:padding="5dip"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/img_immediate_cash_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                   android:text="@string/receiving_records"
                    android:src="@drawable/lottery_purchase_top_right"/>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lly_lottery_purchase_bg"
            android:orientation="vertical"
            android:layout_marginTop="20dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip">

            <LinearLayout
                android:id="@+id/lly_lottery_purchase_type"
                android:layout_width="match_parent"
                android:layout_height="70dip"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="@string/choose_game"
                    android:textSize="14dip"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dip"/>
                <Spinner
                    android:id="@+id/sp_lottery_purchase_type"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14dip"
                    android:textColor="#333333"
                    android:visibility="visible"
                    android:background="@color/white"
                    android:layout_marginRight="10dip"
                    android:dropDownWidth="match_parent"
                    android:dropDownVerticalOffset="33dp"
                    android:layout_marginLeft="10dip"/> />
                <ImageView
                    android:layout_width="7dip"
                    android:layout_height="12dip"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/arrow_right_small"
                    android:layout_marginRight="20dip"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="#F3F3F3"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/number"
                        android:textColor="@color/black"
                        android:textSize="14dip"
                        android:paddingLeft="20dip"
                        android:gravity="center_vertical"
                        android:layout_marginTop="20dip"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dip"
                    android:orientation="vertical"
                    android:background="@color/white">
                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_lottery_purchase_one"
                            android:layout_width="90dip"
                            android:layout_height="40dip"
                            android:background="@drawable/recharge_shape_bgs"
                            android:text="5"
                            android:textSize="14dip"
                            android:textColor="@color/white"
                            android:gravity="center"
                            app:layout_heightPercent="10%sw"
                            app:layout_widthPercent="23%sw"
                            />
                        <com.zhy.android.percent.support.PercentLinearLayout
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/tv_lottery_purchase_two"
                                android:layout_width="90dip"
                                android:layout_height="40dip"
                                android:background="@drawable/shape_bjk_001"
                                android:text="10"
                                android:textSize="14dip"
                                android:textColor="#7a7a7a"
                                android:gravity="center"
                                app:layout_heightPercent="10%sw"
                                app:layout_widthPercent="23%sw"
                                />
                        </com.zhy.android.percent.support.PercentLinearLayout>

                        <TextView
                            android:id="@+id/tv_lottery_purchase_three"
                            android:layout_width="90dip"
                            android:layout_height="40dip"
                            android:background="@drawable/shape_bjk_001"
                            android:text="15"
                            android:textSize="14dip"
                            android:textColor="#7a7a7a"
                            android:gravity="center"
                            app:layout_heightPercent="10%sw"
                            app:layout_widthPercent="23%sw"/>
                    </com.zhy.android.percent.support.PercentLinearLayout>
                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dip">
                        <TextView
                            android:id="@+id/et_lottery_purchase_six"
                            android:layout_width="90dip"
                            android:layout_height="40dip"
                            android:background="@drawable/shape_bjk_001"
                            android:text="@string/other_quantities"
                            android:textSize="14dip"
                            android:textColor="#7a7a7a"
                            android:gravity="center"
                            android:singleLine="true"
                            app:layout_heightPercent="10%sw"
                            app:layout_widthPercent="23%sw" />
                        <EditText
                            android:id="@+id/et_lottery_purchase_seven"
                            android:layout_width="0dip"
                            android:layout_height="40dip"
                            android:layout_weight="1"
                            android:background="@drawable/shape_bjk_001"
                            android:text=""
                            android:textSize="14dip"
                            android:textColor="#7a7a7a"
                            android:gravity="center"
                            android:inputType="number"
                            android:singleLine="true"
                            android:maxLength="4"
                            app:layout_heightPercent="10%sw"
                            android:layout_marginLeft="10dip"
                            android:visibility="gone"/>
                    </com.zhy.android.percent.support.PercentLinearLayout>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/btn_lottery_purchase_submit"
                android:layout_width="match_parent"
                android:layout_height="32dip"
                android:background="@drawable/button_add_zhuce"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:textSize="14dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginBottom="20dip"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lly_lottery_pop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:background="#33000000"
        android:orientation="vertical"
        android:paddingBottom="10dip">
        <LinearLayout
            android:id="@+id/lly_lottery_pop_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dip"
            android:layout_marginRight="40dip"
            android:background="@drawable/lly_lottery_purchase_bg"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dip"
                android:background="@drawable/lottery_pop_view_shape"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/selected_information_preview"
                        android:textSize="24dip"
                        android:textColor="@color/white"
                        android:layout_marginLeft="20dip"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:weightSum="4"
                    android:orientation="vertical"
                    android:gravity="bottom">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dip"
                        android:layout_weight="3"
                        android:src="@drawable/lottery_main_pop_bg"
                        android:adjustViewBounds="true"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dip"
                android:layout_marginLeft="20dip"
                android:layout_marginBottom="50dip">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/selected_game"
                        android:textSize="16dip"
                        android:textColor="@color/black"
                        android:minWidth="80dip"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lottery_pop_number"
                        android:textSize="16dip"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dip"
                        android:minWidth="80dip"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dip">
                    <TextView
                        android:id="@+id/tv_lottery_pop_three_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="zillionaire"
                        android:textSize="16dip"
                        android:textColor="@color/black" />
                    <TextView
                        android:id="@+id/tv_lottery_pop_three_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="16dip"
                        android:textColor="@color/main_color"
                        android:layout_marginTop="10dip"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#DFDFDF" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_lottery_pop_three_dismiss"
                        android:layout_width="0dip"
                        android:layout_height="40dip"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:text="@string/close"
                        android:textColor="#959595"
                        android:textSize="16dip" />
                    <Button
                        android:id="@+id/btn_lottery_pop_three_submit"
                        android:layout_width="0dip"
                        android:layout_height="40dip"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:text="@string/confirm_the_order"
                        android:textColor="#4185f4"
                        android:textSize="16dip" />
                </LinearLayout>
                <View
                    android:layout_width="1dip"
                    android:layout_height="40dip"
                    android:background="#DFDFDF"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lly_lottery_pop_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dip"
            android:layout_marginRight="40dip"
            android:background="@drawable/lly_lottery_purchase_bg"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quick_lottery"
                android:textSize="16dip"
                android:textColor="@color/black"
                android:layout_marginTop="30dip" />
            <View
                android:layout_width="48dip"
                android:layout_height="0.5dip"
                android:background="@color/black"
                android:layout_marginTop="16dip"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scanning_lottery_tickets"
                android:textSize="14dip"
                android:textColor="@color/grad"
                android:layout_marginTop="14dip"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="35dip">
                <ImageView
                    android:id="@+id/img_lottery_pop_one"
                    android:layout_width="140dip"
                    android:layout_height="140dip" />
                <LinearLayout
                    android:id="@+id/lly_lottery_pop_zoom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="15dip"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/cx" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/click_to_zoom_in"
                        android:textSize="12dip"
                        android:textColor="@color/grad"
                        android:layout_marginLeft="2dip"/>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/btn_lottery_pop_one_submit"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:background="@drawable/button_add_zhuce"
                android:layout_marginTop="35dip"
                android:text="@string/str_cancel"
                android:textColor="@color/white"
                android:textSize="14dip"
                android:layout_marginLeft="40dip"
                android:layout_marginRight="40dip"
                android:layout_marginBottom="40dip"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lly_lottery_pop_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dip"
            android:layout_marginRight="40dip"
            android:background="@drawable/lly_lottery_purchase_bg"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="112dip"
                android:layout_height="112dip"
                android:layout_marginTop="50dip"
                android:src="@drawable/lottery_success"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dip"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/scanning_success"
                    android:textSize="16dip"
                    android:textColor="@color/black"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="30dip">
                <Button
                    android:id="@+id/btn_lottery_pop_two_dismiss"
                    android:layout_width="0dip"
                    android:layout_height="40dip"
                    android:layout_weight="1"
                    android:background="@drawable/button_add_zhuce"
                    android:layout_marginTop="35dip"
                    android:text="@string/close"
                    android:textColor="@color/white"
                    android:textSize="14dip"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="10dip" />
                <Button
                    android:id="@+id/btn_lottery_pop_two_submit"
                    android:layout_width="0dip"
                    android:layout_height="40dip"
                    android:layout_weight="1"
                    android:background="@drawable/button_add_zhuce"
                    android:layout_marginTop="35dip"
                    android:text="@string/see_details"
                    android:textColor="@color/white"
                    android:textSize="14dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="20dip"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
