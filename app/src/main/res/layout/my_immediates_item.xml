<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/lly_my_immediate_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_heightPercent="17%sh"
            android:orientation="vertical"
            android:gravity="center">
            <com.zhy.android.percent.support.PercentRelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_my_immediate_item_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_heightPercent="12%sw"
                    app:layout_widthPercent="12%sw"
                    android:src="@drawable/my_jkc_four"/>
                <ImageView
                    android:id="@+id/img_my_immediate_item_lock"
                    android:layout_width="wrap_content"
                    android:layout_height="18dip"
                    android:src="@drawable/suo_yes"
                    android:adjustViewBounds="true"
                    android:layout_centerHorizontal="true"
                    android:layout_alignBottom="@id/img_my_immediate_item_icon" />
            </com.zhy.android.percent.support.PercentRelativeLayout>
            <TextView
                android:id="@+id/tv_my_immediate_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reward"
                android:textColor="@color/white"
                app:layout_textSizePercent="4%sw"
                app:layout_marginTopPercent="4%sw"
                android:gravity="center"
                android:lines="1"/>
        </com.zhy.android.percent.support.PercentLinearLayout>

    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentLinearLayout>
